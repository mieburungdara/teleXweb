{
    "name": "telexweb/telexweb",
    "description": "A CodeIgniter 3 application for managing Telegram files and subscriptions.",
    "type": "project",
    "require": {
        "php": ">=5.6",
        "codeigniter/framework": "3.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "application/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('index.php') || copy('vendor/codeigniter/framework/index.php', 'index.php');\"",
            "php -r \"file_exists('application/config/paths.php') || copy('vendor/codeigniter/framework/application/config/paths.php', 'application/config/paths.php');\""
        ]
    }
}

